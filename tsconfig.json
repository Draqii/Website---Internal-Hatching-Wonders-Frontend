{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "build",
        "module": "esnext",
        "target": "es5",
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017"
        ],
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": ["./node_modules/@types", "./types"]
    },
    "include": [
        "source/index.tsx",
        "source/types/custom.d.ts",
        "source/types/environment.d.ts",
        "source/**/*",
        "source/**/**/*"
, "../../../modules/niteswitch/src/functions/nightmode.ts"    ],
    "exclude": [
        "node_modules",
        "build",
        "source/**/**/*.stories.tsx",
        "source/**/**/*.test.tsx",
        "source/modules/*"
    ]
}
